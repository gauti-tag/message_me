<h1 class="ui center aligned header">Welcome to MessageMe - a complete chat app</h1>


<h4 class="ui center aligned medium icon header">
  <i class="circular orange power icon"></i>
    Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
     <!-- <div class="ui form">-->
        <%= form_with(scope: :session, url: login_path, class: "ui form", local: true) do |f| %>
        
        <div class="field">
            <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Username'%>
            <i class="user icon"></i>
          </div>
        </div>
        
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
          <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="ui orange submit button">
            <% #f.submit 'Login', class: "ui orange submit button" %>
            Login
        </div>
        <% end %>
      
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div> 

</div>