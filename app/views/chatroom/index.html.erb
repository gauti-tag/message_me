<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
    Say something
</h4>


<!-- container of the page -->

<div class="ui two column grid">
    
    <!-- chat block page -->
    
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
          <div class="content">
            <div class="ui feed">
           
              <%= render @messages %>
           
            </div>
         </div>
          <!-- writing message block -->
          <div class="extra content">
              <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
                
                    <div class="field">
                       
                         <div class="ui fluid icon input">
                             <%= f.text_field :body, placeholder: "Enter message..." %>
                             
                             <%= f.button '<i class="borded inverted orange edit icon"></i>'.html_safe %>
                         </div>
                       
                    </div>
            
                <% end %>
            </div>
          <!-- // end writing message block -->
       </div>    
    </div>

  <!-- // end chat block page -->
   
   <!-- user menu -->

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                  <a class="active item">
                    Home
                  </a>
                  <a class="item">
                    Messages
                  </a>
                  <a class="item">
                    Friends
                  </a>
                </div>
            </div>
        </div>
    </div>
    <!-- // end user menu -->
</div>

<!-- // end container block -->